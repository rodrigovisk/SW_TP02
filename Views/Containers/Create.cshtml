@model TP02SWII.Models.Container

@{ ViewData["Title"] = "Criar"; }

<div>
    <a class="btn btn-default" asp-action="Index">Voltar</a>
</div>


<h2>Criando Container</h2>

<h4>Container</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" style="color:green" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" style="color:green" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" style="color:green" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BLId" style="color:green" class="control-label"></label>
                <select asp-for="BLId" class="form-control" asp-items="ViewBag.BLId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>


