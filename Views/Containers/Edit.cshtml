@model TP02SWII.Models.Container

@{
    ViewData["Title"] = "Editar";
}

<div>
    <a class="btn btn-warning" asp-action="Index">Voltar</a>
</div>

<h2>Editando Container</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContainerId" />
            <div class="form-group">
                <label asp-for="Number" style="color:red" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" style="color:red" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" style="color:red" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BLId" style="color:red" class="control-label"></label>
                <select asp-for="BLId" class="form-control" asp-items="ViewBag.BLId"></select>
                <span asp-validation-for="BLId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>



